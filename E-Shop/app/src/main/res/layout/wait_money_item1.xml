<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号" />

        <TextView
            android:id="@+id/My_Wait_Money_Nest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_50"
            android:text="123456789456" />

        <TextView
            android:id="@+id/My_Wait_Money_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-01-01" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/My_Wait_Money_Recy_Nest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/my_ziliao_test"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/My_Wait_Money_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/My_Wait_Money_Recy"
            android:layout_margin="@dimen/dp_10"
            android:text="共3件商品,需付款999.00元"
            android:layout_alignParentRight="true"
            android:textColor="#f00"
            android:textSize="14sp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/My_Wait_Money_count"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/QXDD"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="#666"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/cancle_order"/>

        <TextView
            android:id="@+id/QZF"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_26"
            android:gravity="center"
            android:text="去支付"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:background="@drawable/to_pay"/>


    </RelativeLayout>


</LinearLayout>
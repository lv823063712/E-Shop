<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitypage.AmendActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:text="修改资料"
        android:textColor="#666"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_138"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/my_ziliao_test">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical">


            <EditText
                android:id="@+id/My_Updata_NiCheng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_4"
                android:hint="修改我的昵称"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/My_Updata_Pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/dp_15"
                android:hint="修改我的密码"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/My_Updata_Confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="确定" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
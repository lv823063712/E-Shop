<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activitypage.HomePageActivity">

    <soexample.bigfly.com.e_shop.adapter.NoScrollViewPager
        android:id="@+id/My_Fragment"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_height="match_parent"></soexample.bigfly.com.e_shop.adapter.NoScrollViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/rectangle6">

        <RadioGroup
            android:id="@+id/My_RG"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_81"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/My_tab_btn_home"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_32"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/btn_home" />

            <RadioButton
                android:id="@+id/My_tab_btn_circle"
                android:layout_width="@dimen/dp_31"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_32"
                android:button="@null"
                android:drawableLeft="@drawable/btn_circle" />

            <RadioButton
                android:id="@+id/My_tab_btn_comment"
                android:layout_width="@dimen/dp_57"
                android:layout_height="@dimen/dp_57"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_29"
                android:button="@null"
                android:drawableLeft="@mipmap/commom_tab_btn_shopping_cart_n_hdpi" />

            <RadioButton
                android:id="@+id/My_tab_btn_list"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_32"
                android:button="@null"
                android:drawableRight="@drawable/btn_list" />

            <RadioButton
                android:id="@+id/My_tab_btn_my"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_32"
                android:button="@null"
                android:drawableRight="@drawable/btn_my" />
        </RadioGroup>
    </RelativeLayout>


</RelativeLayout>